import java.util.*;
class main{
    public static void main(String []args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int a=n*2/7;
        int b=a*2;
        int c=a/2;
        System.out.println(a);
        System.out.println(b);
         System.out.println(c);
    }
}
